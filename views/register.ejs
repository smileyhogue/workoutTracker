<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3">
        <img src="/assets/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <h2>
        Register New User
      </h2>
      <%- include ("./messages") %>
      <form action="/auth/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <div class="form-group">
          <label for="weight">Weight</label>
          <input type="weight" id="weight" name="weight" class="form-control" placeholder="Enter Weight"
            value="<%= typeof weight != 'undefined' ? weight : '' %>" />
        </div>
        <div class="form-group">
          <label for="height">Height</label>
          <!-- create dropdown range 0-7-->
          <select id="feet" name="feet" class="form-control">
            <option value="">Select Height in feet</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
          </select>
          <!-- create dropdown range 0-11-->
          <select id="inches" name="inches" class="form-control">
            <option value="">Select Height in inches</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
            <option value="11">11</option>
          </select>
        </div>
        <div class="form-group">
          <label for="age">Age</label>
          <input type="age" id="age" name="age" class="form-control" placeholder="Enter Age"
            value="<%= typeof age != 'undefined' ? age : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="mt-4">Already have an account? <a href="/auth/login">Login</a></p>
    </div>
  </div>
</div>